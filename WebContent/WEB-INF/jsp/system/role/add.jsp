   <!-- 标题显示 -->
<div id="Title_bar">
    <div id="Title_bar_Head">
        <div id="Title_Head"></div>
        <div id="Title"><!--页面标题-->
            <img border="0" width="13" height="13" src="./css/images/title_arrow.gif"/> 岗位设置
        </div>
        <div id="Title_End"></div>
